<h1>Order the limited edition vinyl</h1>

<%= form_for(@order) do |f| %>
	<div class="field">
		<%= f.label :first_name, "First name:" %> <%= f.text_field :first_name %>
	</div>
	<div class="field">
		<%= f.label :last_name, "Last name:" %> <%= f.text_field :last_name %>
	</div>
	<div class="field">
	<div class="field">
		<%= f.label :email, "Email:" %> <%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :street, "Street:" %> <%= f.text_field :street %> 
		<%= f.label :street_number, "NÂ°:"%> <%= f.text_field :street_number, :size => "4" %> 
		<%= f.label :box_number, "Box:" %> <%= f.text_field :box_number, :size => "4" %>
	</div>
	<div class="field">
		<%= f.label :zipcode, "Zipcode:" %> <%= f.text_field :zipcode, :size => "7" %> 
		<%= f.label :city, "City:" %> <%= f.text_field :city %>
	</div>
	<div class="field">
		<%= f.label :country, "Country:" %> <%=f.text_field :country %>
	<div class="field">
		<%= f.label :pay_type, "Payment method:" %> <%= f.select :pay_type, [["Bank transfer", "bank"], ["Credit card", "credit"]] %>
	<div class:"field">
		<%= f.label :amount, "How many vinyls do you want?"%> 
		<%= f.select :amount, [1, 2, 3, 4, 5, 10, 15, 20, 25, 30, 40, 50] %>
	<div class="actions">		
		<%= f.submit "Order" %>
	</div>

<% end %>